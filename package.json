{
  "name": "lambda-cdk",
  "version": "1.0.0",
  "description": "Infrastructure for deploying John's personal website to AWS",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "c",
    "preinstall": "(command -v git && git config --local commit.template \".commit-msg\") || true"
  },
  "author": {
    "name": "John Corser",
    "url": "https://jpc.io",
    "organization": false
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@aws-cdk/aws-s3-assets": "^1.12.0",
    "@types/node": "^12.7.8",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@aws-cdk/aws-events": "*",
    "@aws-cdk/aws-events-targets": "*",
    "@aws-cdk/aws-lambda": "*",
    "@aws-cdk/core": "*",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/dotenv": "^6.1.1",
    "aws-cdk": "*",
    "dotenv": "^8.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "1.13.7",
    "typescript": "^3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md,scss,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
